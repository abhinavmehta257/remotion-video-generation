# Azure OpenAI TTS Service
AZURE_SPEECH_KEY=your_key_here
AZURE_SPEECH_REGION=swedencentral
AZURE_SPEECH_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com
AZURE_SPEECH_DEPLOYMENT=tts-hd
AZURE_SPEECH_API_VERSION=2025-03-01-preview
AZURE_SPEECH_DEFAULT_VOICE=nova  # Available voices: nova, shimmer, echo, onyx, fable, alloy
AZURE_SPEECH_DEFAULT_LOCALE=en-US

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=your_connection_string_here
AZURE_STORAGE_CONTAINER_NAME=videos

# API Authentication
API_KEY=your_secure_api_key_here

# Server Configuration
PORT=3000
STATIC_SERVER_PORT=3001

# Video Configuration
VIDEO_WIDTH=1080
VIDEO_HEIGHT=1920
VIDEO_FPS=30
VIDEO_DURATION_SECONDS=10
